{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": false,
        "outDir": "dist/src",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ]

    },
    "include": [
        "src/**/*"
    ]
}
